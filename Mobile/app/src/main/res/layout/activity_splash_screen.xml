<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="32dp">

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/avatar3d"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VOCALYX"
            android:textColor="#2B3674"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vocalyx simplifies grading with speech-to-text technology, allowing faculty to input scores effortlessly, reduce workload, and ensure timely submissions."
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="16dp"/>

        <Button
            android:id="@+id/get_started_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Get Started"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_primary"
            android:textSize="16sp"
            android:layout_marginHorizontal="32dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            app:cornerRadius="28dp"/>

    </LinearLayout>

</RelativeLayout>